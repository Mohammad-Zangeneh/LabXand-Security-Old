<div ng-controller="common.registerRequest.controller as ctrl">
    <div class="row">
        <div class="col-sm-12 ">

            <div class="card ">
                <div class="card-header">
                    درخواست عضویت
                    @*<action-panel operation="ctrl.actionPanelRequest"></action-panel>*@
                </div>
                <div class="card-body row">
                    <div class="form-group col-sm-12 col-md-6 col-lg-6">
                        <label>
                            نام
                            <span style="color:red">*</span>
                        </label>
                        <input type="text" ng-model="ctrl.currentEntity.FirstName" class="form-control" required />
                    </div>
                    <div class="form-group col-sm-12 col-md-6 col-lg-6">
                        <label>
                            نام خانوادگی
                            <span style="color:red">*</span>
                        </label>
                        <input type="text" ng-model="ctrl.currentEntity.LastName" class="form-control" required />
                    </div>
                    <div class="form-group col-sm-12 col-md-6 col-lg-6">
                        <label>
                            نام کاربری
                            <span style="color:red">*</span>
                        </label>
                        <input type="text" ng-disabled="ctrl.EditMode" ng-model="ctrl.currentEntity.UserName" class="form-control" required />
                    </div>
                    <div class="form-group col-sm-12 col-md-6 col-lg-6">
                        <label>
                            شماره پرسنلی
                            <span style="color:red">*</span>
                        </label>
                        <input type="text" ng-model="ctrl.currentEntity.PersonnelNumber" class="form-control" required />
                    </div>
                  
                    <div class="form-group col-sm-12 col-md-6 col-lg-6">
                        <label>
                            رمز ورود
                            <span style="color:red">*</span>
                        </label>

                        <input type="password" ng-disabled="ctrl.EditMode" ng-model="ctrl.currentEntity.Password" class="form-control" required />
                    </div>
                    <div class="form-group col-sm-12 col-md-6 col-lg-6">
                        <label>
                            تکرار رمز ورود
                            <span style="color:red">*</span>
                        </label>
                        <input type="password" ng-disabled="ctrl.EditMode" ng-model="ctrl.currentEntity.ConfirmPassword" class="form-control" required />
                    </div>
                    <div class="form-group col-sm-12 col-md-6 col-lg-6">
                        <label>
                            ایمیل
                            <span style="color:red">*</span>
                        </label>
                        <input type="text" ng-disabled="ctrl.EditMode" ng-model="ctrl.currentEntity.Email" class="form-control" required />
                    </div>
                    <div class="form-group col-sm-12 col-md-6 col-lg-6">
                        سازمان
                        <span style="color:red">*</span>
                        <labxand-lookup operation="ctrl.organizationLookup" class="form-control"></labxand-lookup>
                    </div>

                    <div class="form-group col-sm-12 col-md-6 col-lg-6">
                        جایگاه سازمانی
                        <span style="color:red">*</span>
                        <labxand-lookup operation="ctrl.enterprisePositionLookup" class="form-control"></labxand-lookup>
                    </div>



                </div>

                <div class="col-sm-12 col-md-12 col-lg-12 text-left" style="margin-bottom:10px">
                    <button ng-click="ctrl.RegisterRequest()" class="btn btn-primary" style="border-radius: 50em;">درخواست عضویت</button>
                    <button ng-click="ctrl.LoginPage()" class="btn btn-primary" style="border-radius: 50em;">صفحه ورود</button>
                </div>

            </div>

        </div>
        <!--/.col-->
        <!--/.col-->

    </div>




</div>